{
  "extends": [
    "plugin:import/errors",
    "eslint:recommended",
    "alloy",
    "alloy/react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "react/self-closing-comp": "warn",
    "react/no-unknown-property": [
      "off",
      {
        "ignore": [
          "class"
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@",
            "./src/"
          ],
          [
            "@styles",
            "./src/styles/"
          ],
          [
            "@components",
            "./src/components/"
          ]
        ],
        "extensions": [
          ".js",
          ".css",
          ".mdx"
        ]
      }
    }
  }
}