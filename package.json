  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "stylelint --cache --cache-location=.stylelintcache/ --fix"
    ]
  },
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "next start",
    "lint": "eslint \"src/**/*.js\"",
    "lint:css": "stylelint \"src/**/*.{js,css}\"",
    "format": "prettier-eslint --write $PWD/'src/**/*.js' && eslint --fix ."
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "emotion": "^10.0.27",
    "emotion-server": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "gray-matter": "^4.0.2",
    "milligram": "^1.4.1",
    "next": "^9.4.4",
    "next-compose-plugins": "^2.2.0",
    "next-optimized-images": "^2.6.1",
    "polished": "^3.6.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "remark": "^12.0.1",
    "remark-attr": "^0.11.1",
    "remark-html": "^11.0.2",
    "smooth-scroll": "^16.1.3",
    "use-media": "^1.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "eslint": "^7.5.0",
    "eslint-config-alloy": "^3.7.3",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "imagemin-optipng": "^8.0.0",
    "lint-staged": "^10.2.11",
    "prettier-eslint": "^11.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "webp-loader": "^0.6.0",
    "webpack-merge": "^5.0.9"
  }
}
