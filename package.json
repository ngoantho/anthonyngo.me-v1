{
  "name": "anthonyngo.me",
  "version": "0.8.5",
  "description": "My personal portfolio/website",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngoantho/portfolio.git"
  },
  "author": "Anthony Ngo <contact@anthonyngo.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngoantho/portfolio/issues"
  },
  "homepage": "https://github.com/ngoantho/portfolio#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix ."
    ]
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "style": "module"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:out": "next build && next export",
    "start": "next start",
    "prep:sminit": "git submodule update --init",
    "prep:copy": "cp -rf ngoantho/ src/components/cms/",
    "netlify": "npm run prep:sminit && npm run prep:copy && npm run build:out",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "prettier --check \"src/**/*.js\""
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^10.0.3",
    "@zeit/next-css": "^1.0.1",
    "astroturf": "^0.10.5",
    "cssnano": "^4.1.10",
    "next": "^10.0.3",
    "next-seo": "^4.17.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "remark-gemoji": "^6.0.0",
    "water.css": "^2.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "babel-plugin-import-glob-array": "^0.2.0",
    "eslint": "^7.15.0",
    "eslint-config-alloy": "^3.8.2",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "precss": "^4.0.0",
    "prettier": "^2.2.1",
    "rucksack-css": "^1.0.2"
  }
}
