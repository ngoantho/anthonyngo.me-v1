{
  "name": "ngoantho.github.io",
  "version": "1.0.0",
  "description": "My personal portfolio.",
  "author": "Anthony Ngo <ngo.anthony.me@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngoantho/ngoantho.github.io"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "scripts": {
    "dev": "parcel ./src/index.html",
    "build:optim": "parcel build ./src/index.html --experimental-scope-hoisting --no-source-maps --no-autoinstall",
    "build": "parcel build ./src/index.html",
    "format": "prettier --write \"**/*.{js,jsx,css,md}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-compat": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-react": "latest",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "parcel-bundler": "^1.12.4",
    "posthtml": "^0.13.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "postcss-modules": "^2.0.0",
    "postcss-preset-env": "^6.7.0",
    "preact": "^10.4.4",
    "react-html-parser": "^2.0.2"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0-0"
  }
}
