  "homepage": "https://github.com/ngoantho/portfolio#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "stylelint --cache --cache-location=.stylelintcache/ --fix"
    ]
  },
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "next start",
    "lint": "eslint \"src/**/*.js\"",
    "lint:css": "stylelint \"src/**/*.{js,css}\"",
    "format": "prettier-eslint --write $PWD/'src/**/*.js' && eslint --fix ."
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.6.0",
    "eslint-config-alloy": "^3.7.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "imagemin-optipng": "^8.0.0",
    "lint-staged": "^10.2.11",
    "prettier-eslint": "^11.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "react-refresh": "^0.8.3",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "webp-loader": "^0.6.0"
  },
  "dependencies": {
    "@prefresh/next": "^0.3.0",
    "goober": "^2.0.5",
    "goober-autoprefixer": "^1.2.1",
    "gray-matter": "^4.0.2",
    "milligram": "^1.4.1",
    "next": "^9.4.0",
    "next-optimized-images": "^2.6.2",
    "polished": "^3.6.5",
    "preact": "^10.4.4",
    "preact-render-to-string": "^5.1.9",
    "prop-types": "^15.7.2",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.0.1",
    "remark": "^12.0.1",
    "remark-attr": "^0.11.1",
    "remark-html": "^12.0.0",
    "smooth-scroll": "^16.1.3",
    "use-media": "^1.4.0"
  }
}
