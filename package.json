{
  "name": "portfolio",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngoantho/portfolio.git"
  },
  "author": "Anthony Ngo <ngo.anthony.me@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --cache-location=.eslintcache/ --fix",
      "stylelint --cache --cache-location=.stylelintcache/"
    ],
    "*.{js,json,md,mdx}": "prettier --write"
  },
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "next start",
    "lint": "eslint . --ext .js",
    "lint:css": "stylelint '**/*.js'",
    "prettier": "prettier --check \"**/*.{js,json,md,mdx}\""
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.6",
    "@next/mdx": "^9.4.4",
    "@zeit/next-css": "^1.0.1",
    "linaria": "2.0.0-alpha.5",
    "milligram": "^1.4.1",
    "milligram-themes": "^0.0.2",
    "next": "latest",
    "next-compose-plugins": "^2.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "remark-align": "^1.2.13",
    "remark-attr": "^0.11.1",
    "theming": "^3.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cssnano-webpack-plugin": "^1.0.3",
    "eslint": "^7.4.0",
    "eslint-config-alloy": "^3.7.3",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "webpack-merge": "^5.0.8"
  }
}
